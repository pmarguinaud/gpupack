function eccodes_install ()
{
  ECCODES=eccodes-2.30.2
  TAR=$ECCODES-Source.tar.gz
  cd $TMP

  if [ ! -d "$ECCODES" ]
  then
  tar xvf "$SOURCES/$TAR"
  fi

  \rm -rf "$ECCODES-Build"
  mkdir -p "$ECCODES-Build"
  cd "$ECCODES-Build"

  cmake ../$ECCODES-Source -DCMAKE_INSTALL_PREFIX=$INSTALL -DENABLE_ECCODES_THREADS=1 -DENABLE_JPG=0 -DENABLE_AEC=OFF
  make -j4 install
}

