function dummy_install ()
{
  lib=$1
  shift

  perl -e '
use strict;
use Data::Dumper;

my %opts;

my $opt;

for my $argv (@ARGV)
  {
    if ($argv eq "--")
      {
        next;
      }
    elsif ($argv =~ m/^--(\w+)$/o)
      {
        $opt = $1;
      }
    else
      {
        die "argv=$argv" unless ($opt);
        push @{ $opts{$opt} }, $argv;
      }
  }

print "#include <stdlib.h>\n\n";

for my $abort (@{ $opts{abort} })
{
  print "void $abort () { abort (); }\n\n";
}

for my $dummy (@{ $opts{dummy} })
{
  print "void $dummy () { }\n\n";
}

' -- $* > $lib.c
  cc -c $lib.c
  ar crv lib$lib.a $lib.o
  mkdir -p $INSTALL/lib
  mv lib$lib.a $INSTALL/lib
  \rm $lib.c $lib.o
}

function cutlass_install ()
{

  #cutlass is only installed with the NVHPC compiler
  if [[ "$ARCH" != NVHPC* ]]; then
    return
  fi

  CUTLASS=cutlass-3.0.0
  TAR=$CUTLASS.tar.gz
  cd $TMP

  if [ ! -d "$CUTLASS" ]
  then
  tar xvf "$SOURCES/$TAR"
  fi

  \rm -rf "$CUTLASS-Build"
  mkdir -p "$CUTLASS-Build"
  cd "$CUTLASS-Build"

  cmake ../$CUTLASS -DCMAKE_INSTALL_PREFIX=$INSTALL -DCUTLASS_ENABLE_HEADERS_ONLY=ON -DCUTLASS_ENABLE_TESTS=OFF -DCMAKE_CUDA_COMPILER=$GPUPACK_PREFIX/support/wrap/$ARCH/ccu
  make -j4 install
}


function libraries_install ()
{
  export INSTALL=$GPUPACK_PREFIX/install/$ARCH
  export SOURCES=$GPUPACK_PREFIX/sources
  export TMP=$GPUPACK_PREFIX/tmp/$ARCH

  mkdir -p $INSTALL
  mkdir -p $TMP
  mkdir -p $INSTALL/lib64

  if [ ! -d "$INSTALL/lib" ]
  then
  ln -s lib64 $INSTALL/lib
  fi
  
  export CC=$GPUPACK_PREFIX/support/wrap/$ARCH/cc
  export FC=$GPUPACK_PREFIX/support/wrap/$ARCH/f90
  export CXX=$GPUPACK_PREFIX/support/wrap/$ARCH/cxx
  export F90=$GPUPACK_PREFIX/support/wrap/$ARCH/f90
  export F77=$GPUPACK_PREFIX/support/wrap/$ARCH/f90

  for lib in \
    eccodes hdf5 netcdf netcdf_fortran lapack eigen oasisdummy mpidummy \
    ibmdummy naglitedummy wamdummy fdbdummy gribex bufr rgb cutlass
  do
    (
      # Load some specific environment variables 

      if [ -f "$GPUPACK_PREFIX/scripts/$ARCH/$lib.sh" ]
      then
        source "$GPUPACK_PREFIX/scripts/$ARCH/$lib.sh"
      fi

      ${lib}_install
    )
  done
}

